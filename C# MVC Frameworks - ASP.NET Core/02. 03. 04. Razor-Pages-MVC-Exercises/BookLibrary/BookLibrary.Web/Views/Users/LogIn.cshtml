@model LogInBindingModel
@{
    ViewData["Title"] = "Log In";
}
<h2>@ViewData["Title"]</h2>
@if (@Html.TempData.Keys.Contains("Error"))
{
    <div class="alert alert-warning">
        @Html.TempData["Error"]
    </div>
}
<form asp-controller="Users" asp-action="LogIn" method="post">
    <div class="form-group row">
        <label asp-for="Username" class="col-sm-2 col-form-label font-weight-bold"></label>
        <div class="col-sm-10">
            <input asp-for="Username" class="form-control" placeholder="Title">
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Password" class="col-sm-2 col-form-label font-weight-bold"></label>
        <div class="col-sm-10">
            <input asp-for="Password" class="form-control" placeholder="Author">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10 offset-2">
            <input type="submit" class="btn btn-success" value="Log in">
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}