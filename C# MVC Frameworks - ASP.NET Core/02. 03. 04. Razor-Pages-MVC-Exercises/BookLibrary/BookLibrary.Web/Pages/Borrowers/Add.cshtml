@page
@model BookLibrary.Web.Pages.Borrowers.AddModel
@{
    ViewData["Title"] = "Add Borrower";
}
<h2>@ViewData["Title"]</h2>
<form method="post">
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label font-weight-bold"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Title">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Address" class="col-sm-2 col-form-label font-weight-bold"></label>
        <div class="col-sm-10">
            <input asp-for="Address" class="form-control" placeholder="Title">
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10 offset-2">
            <input type="submit" class="btn btn-success" value="Add Borrower">
        </div>
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}