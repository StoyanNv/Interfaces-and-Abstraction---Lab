@page
@model AddModel
@{
    ViewData["Title"] = "Add Book";
}

<h2>@ViewData["Title"]</h2>
<form method="post">
    <div class="form-group row">
        <label asp-for="Title" class="col-sm-2 col-form-label font-weight-bold"></label>
        <div class="col-sm-10">
            <input asp-for="Title" class="form-control" placeholder="Title">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Author" class="col-sm-2 col-form-label font-weight-bold"></label>
        <div class="col-sm-10">
            <input asp-for="Author" class="form-control" placeholder="Author">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ImageUrl" class="col-sm-2 col-form-label font-weight-bold"></label>
        <div class="col-sm-10">
            <input asp-for="ImageUrl" class="form-control" placeholder="Image URL">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label font-weight-bold"></label>
        <div class="col-sm-10">
            <textarea asp-for="Description" class="form-control" placeholder="Description"></textarea>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10 offset-2">
            <input type="submit" class="btn btn-success" value="Add Book">
        </div>
    </div>
</form>